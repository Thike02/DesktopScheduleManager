{
  "name": "notion-schedule-app",
  "version": "1.1.2",
  "description": "Notionから週間スケジュールを表示するデスクトップアプリ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.notionschedule.app",
    "productName": "WeekSchedule",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico" 
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "WeekSchedule",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "package.json",
      "icon.png"
    ]
  },
  "dependencies": {
    "@notionhq/client": "^5.7.0",
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "electron": "^33.4.11",
    "electron-builder": "^26.4.0"
  }
}