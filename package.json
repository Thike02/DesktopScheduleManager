{
  "name": "notion-schedule-app",
  "version": "1.0.0",
  "description": "Notionから週間スケジュールを表示するデスクトップアプリ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.notionschedule.app",
    "productName": "週間スケジュール",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "package.json"
    ],
    "extraFiles": [
      ".env"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@notionhq/client": "^5.7.0",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "electron": "^33.4.11",
    "electron-builder": "^26.4.0"
  }
}
